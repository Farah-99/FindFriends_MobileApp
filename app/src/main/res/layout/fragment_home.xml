<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="add"
    android:gravity="right"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/tv1_home_pos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Demande Position"
        android:textColor="#FF4E4E"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv2_home_pos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Saisir un numÃ©ro pour demander sa position"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/ed_nume_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="numero"
        android:inputType="phone" />

    <Button
        android:id="@+id/btn_envoie_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#E8D428"
        android:text="ENVOIE DEMANDE" />
</LinearLayout>